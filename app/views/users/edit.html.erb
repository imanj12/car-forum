<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Edit User</h1>
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :username %>
      <%= f.text_field :username %><br>
      <%= f.label :birthdate %>
      <%= f.text_field :birthdate %><br>
      <%= f.label :bio %>
      <%= f.text_area :bio %><br>
      <%= f.submit %>
    <% end %>

  </body>
</html>
